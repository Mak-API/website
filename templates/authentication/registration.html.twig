<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <link href="https://fonts.googleapis.com/css?family=Kodchasan|Major+Mono+Display" rel="stylesheet">
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
    <link rel="stylesheet" href="{{ asset('build/vendor.css') }}">
    <script type="text/javascript" src="{{ asset('build/vendor.js') }}"></script>

    {% block head_javascripts %}{% endblock %}
</head>
<body>
{{ encore_entry_script_tags('app') }}
{% block body %}
    <header class="linear-header">
        {% include 'components/header/header.html.twig' %}
    </header>
    <main>
        {% if isDeleted == true %}
            <script>
                M.toast({html: 'You have deleted your account not long ago, you just need to check your email for recover your account.'})
            </script>
            <H1>USER DELETED</H1>
        {% endif %}
        <section class="form-registration row col l12 m12 s12">
            <div class="content-registration valign-wrapper offset-l3 col l6 offset-m2 m8 offset-s2 s8">
                <div class="center-block">
                    {% if isVerified == true %}
                        <div class="validate-registration">
                            <h2>Congratulation, your email is verified !</h2>
                            <p>You can now sign in to your profile.</p>
                        </div>
                    {% else %}
                        <div class="validate-registration">
                            <h2>Check your email box to activate your account !</h2>
                            <button  class=" send-email btn waves-effect waves-light" type="submit" name="action">
                                <a href="{{ path('send_confirmation_email', {'email': login }) }}">No mail received ? Click here</a>
                            </button>
                        </div>
                    {% endif %}
                </div>
            </div>
        </section>
    </main>
    <footer class="homepage-footer page-footer">
        {% include 'components/footer/homepage_footer.html.twig' %}
    </footer>
{% endblock %}
</body>
</html>

