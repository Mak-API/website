{% extends 'Front/gradient_front.html.twig' %}

{% block title %}Mak'API - Profile{% endblock %}

{% block main %}
    <section class="part-profile white-text">
        <div class="profile-content container">
            <div class="profile-content_center_div center-block">
                <div class="row">
                    <img class="profile-picture" src="{{ asset('images/png/Moi2_190118.png') }}" alt="Profile_picture">
                </div>
                <div class="row center">
                    <h4>{{ user.login }}</h4>
                    <p class="makapi-text center"> {{ user.email }}</p>
                </div>
                <div class="row info-API">
                    <div class="col m5 s12">
                        <p class="makapi-text center">
                            API created :
                            {% if numberAPI is defined %}
                                {{ numberAPI }}
                            {% else %}
                                0
                            {% endif %}
                        </p>
                    </div>
                    <div class="col offset-m2 m5 s12">
                        <p class="makapi-text center">
                            Request traited :
                            {% if apiRequest is defined %}
                                {{ apiRequest }}
                            {% else %}
                                0
                            {% endif %}
                        </p>
                    </div>
                </div>
                <div class="profile-setting center">
                    <a class="btn-flat white-text" href="{{ path('app_user_edit', {'login': user.login}) }}">
                        <i class="material-icons medium left">settings</i>
                        Settings
                    </a>
                </div>
                <div class="profile-panel makapi-text tall">
                    <ul>
                        <li>
                            <a class="valign-wrapper" href="{{ path('app_generator_form_index') }}">
                                <i class="material-icons">add</i>
                                Create new API
                            </a>
                        </li>
                        <li>
                            <a class="valign-wrapper" href="#">
                                <i class="material-icons">bar_chart</i>
                                See statistics
                            </a>
                        </li>
                        <li>
                            <a class="valign-wrapper" href="{{ path('app_user_confirmdelete', {id: user.id}) }}">
                                <i class="material-icons">delete</i>
                                Delete my profile
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

