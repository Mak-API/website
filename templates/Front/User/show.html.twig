    <section class="profile-content container">
        <div class="row">
            <div class="col s12">
                <ul class="collapsible">
                    <li class="active">
                        <div class="collapsible-header">
                            <h4>
                                <i class="material-icons">
                                    expand_more
                                </i>
                                My API
                            </h4>
                        </div>
                        <div class="collapsible-body">
                            <table class="centered responsive-table">
                                <thead class="makapi-text tall">
                                    <tr>
                                        <th>Name</th>
                                        <th>Description</th>
                                        <th>Created at</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody class="makapi-text">
                                <tr>
                                    <td>Name of your API</td>
