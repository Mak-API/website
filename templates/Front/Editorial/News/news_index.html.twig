{% extends 'Front/linear_front.html.twig' %}

{% block title %}
    Mak'API - What's news
{% endblock %}

{% block main %}
    <div class="container makapi-container">
        <div class="row">
            <div class="col s12">
                {% for new in news %}
                    <div class="card blue-grey darken-1">
                        <div class="card-content white-text">
                            <span class="card-title">{{ new.title }}</span>
                            <p>
                                {{ new.body }}
                            </p>
                        </div>
                        <div class="card-action">
                            <a href="{{ path('app_news_show', {id: new.id}) }}">Read more</a>
                        </div>
                    </div>
                {% else %}
                    <p>No news now</p>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}