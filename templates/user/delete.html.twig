{% extends 'pagelayout.html.twig' %}

{% block title %}Delete your account{% endblock %}

{% block body %}
    <header class="linear-header">
        {% include 'components/header/header.html.twig' %}
    </header>
    <main>
        <section class="form-signin part-profile row col l12 m12 s12">
            <div class="form-content valign-wrapper offset-l3 col l6 m6 s6">
                <div class="center-block">
                    <h2>Do you want delete your account {{ app.user.login }} ?</h2>
                    <div class="form-makapi row col l12 blueDial-text">
                        <form method="post" action="{{ path('app_user_delete') }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                            <a href=""></a><button class="btn">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </main>
{% endblock %}
